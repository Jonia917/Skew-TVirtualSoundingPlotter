            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.3</version>
                <configuration>
                    <!--<minimizeJar>true</minimizeJar>-->
                    <filters>
                        <filter>
                            <artifact>mysql:mysql-connector-java</artifact>
                            <includes>
                                <include>com/mysql/jdbc/**</include>
                            </includes>
                        </filter>
                        <filter>
                            <artifact>edu.ucar:grib</artifact>
                            <includes>
                                <include>**</include>
                            </includes>
                        </filter>
                        <filter>
                            <artifact>edu.ucar:cdm</artifact>
                            <includes>
                                <include>**</include>
                            </includes>
                        </filter>
                        <filter>
                            <artifact>com.amazonaws:*</artifact>
                            <excludes>
                                <exclude>**</exclude>
                            </excludes>
                        </filter>
                        <filter>
                            <artifact>com.fasterxml.jackson.core:*</artifact>
                            <excludes>
                                <exclude>**</exclude>
                            </excludes>
                        </filter>
                        <!--<filter>
                            <artifact>com.google.*:*</artifact>
                            <excludes>
                                <exclude>**</exclude>
                            </excludes>
                        </filter>-->
                        <!--<filter>
                            <artifact>edu.ucar:netcdf4</artifact>
                            <includes>
                                <include>**</include>
                            </includes>
                        </filter>-->
                    </filters>
                    <transformers>
                        <transformer 
                            implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                            <mainClass>com.mccollinsmith.donovan.skewtmultitool.SkewTMultiTool</mainClass>
                        </transformer>
                    </transformers>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
